    <exclude name="WordPress.VIP.RestrictedFunctions.user_meta_delete_user_meta" />
    <exclude name="WordPress.VIP.RestrictedVariables.user_meta__wpdb__usermeta" />
    <exclude name="WordPress.NamingConventions.ValidVariableName.NotSnakeCaseMemberVar" />
    <exclude name="WordPress.VIP.FileSystemWritesDisallow" />

    <!-- We currently don't want these rules that WordPress imports: -->

    <exclude name="Generic.Classes.OpeningBraceSameLine.BraceOnNewLine" />
    <exclude name="Generic.Classes.OpeningBraceSameLine.SpaceBeforeBrace" />
